<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abstract_blue_wave_stylish"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0029B6F6">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:fontFamily="@font/roboto"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/logobijeli24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/protektisNaziv"
                    app:layout_constraintTop_toTopOf="parent"></ImageButton>


                <EditText
                    android:id="@+id/protektisNaziv"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittext_background"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="ПРОТЕКТИС"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#083552"
                    android:textSize="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/listaPrisutnosti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/roboto"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="30dp"
                android:paddingTop="0dp"
                android:text="Листа присутности"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#083552"
                android:textSize="@dimen/_20sdp" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Име"
                app:hintTextColor="#DA083552">
                <EditText
                    android:id="@+id/ime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#DA083552"
                    android:fontFamily="@font/roboto"
                    android:padding="20dp"
                    android:textColor="@color/white"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Презиме"
                app:hintTextColor="#DA083552">


                <EditText
                    android:id="@+id/prezime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#DA083552"
                    android:fontFamily="@font/roboto"
                    android:padding="20dp"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Општина/Град"
                app:hintTextColor="#083552">
                <EditText
                    android:id="@+id/opstinaGrad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signIn"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#DA083552"
                    android:fontFamily="@font/roboto"
                    android:padding="20dp"
                    app:hintTextColor="#FFFFFF"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Радно место"
                app:hintTextColor="#FFFFFF">

                <EditText
                    android:id="@+id/radnoMesto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signIn"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#DA083552"
                    android:fontFamily="@font/roboto"
                    android:padding="20dp"
                    app:hintTextColor="#083552" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Број телефона"
                app:hintTextColor="#FFFFFF">

                <EditText
                    android:id="@+id/brojTelefona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signIn"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#DA083552"
                    android:fontFamily="@font/roboto"
                    android:inputType="number|textNoSuggestions"
                    android:padding="20dp"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Мејл адреса"
                app:hintTextColor="@color/white">
                <EditText
                    android:id="@+id/mejlAdresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signIn"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#DA083552"
                    android:fontFamily="@font/roboto"
                    android:padding="20dp"
                    app:hintTextColor="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/dugmeSacuvaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#083552"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="20dp"
                android:text="Сачувај"
                app:cornerRadius="6dp" />



        </LinearLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>