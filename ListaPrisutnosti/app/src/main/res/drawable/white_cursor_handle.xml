<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The following rectangle defines the cursor handle's color -->
    <item android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the desired cursor handle color here (white in this case) -->
        </shape>
    </item>

    <!-- The following rectangle defines the cursor handle's border (you can adjust the border color and size) -->
    <item android:top="0dp" android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background for the border -->
            <stroke android:color="#FFFFFF" android:width="1dp" /> <!-- Border color and size -->
        </shape>
    </item>
</layer-list>
